{
  "manifest_version": 3,
  "name": "Gemini Chatbot",
  "version": "1.0",
  "description": "Google Gemini API ile yapay zeka destekli bir sohbet uzantısı.",
  "permissions": ["storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}